@require '../node_modules/modern-normalize/modern-normalize.css'
@require '../assets/lato/index.styl'
@require '../node_modules/@blueprintjs/icons/lib/css/blueprint-icons.css'
@require '../node_modules/@blueprintjs/core/lib/css/blueprint.css'

body,
html
  margin 0
  padding 0
  font-family 'Lato', sans-serif
  font-size 14px

.split
  display flex
  justify-content space-between

.divide
  display flex
  > *
    flex-grow 1
    &:not(:last-child)
      margin-right 14px

.invisivle
  display contents

.d,
table.bp4-html-table
  td.d,
  th.d
    text-align right
  td.indent1
    padding-left 24px
  td.selected
    background-color rgba(191,204,214,.3)
  td.data
    font-family monospace

table.bp4-html-table.selectable
  td
    cursor pointer
    &:hover
      background-color rgba(191,204,214,.3)

table.bp4-html-table.jobs,
table.bp4-html-table.queues
  width 100%
  border 2px solid #666
  margin-top 14px
  margin-bottom 14px

table.bp4-html-table.queues
  thead tr:nth-child(1) th,
  thead tr:nth-child(2) th:nth-child(2)
    font-weight bold
    font-size 18px
  thead tr th
    font-weight normal
  tbody td:nth-child(2),
  tbody td:nth-child(5),
  tbody td:nth-child(9)
    box-shadow: inset -1px 1px 0 0 rgba(16, 22, 26, 0.15)
  thead tr:first-child
    th:nth-child(2),
    th:nth-child(3),
    th:nth-child(4)
      box-shadow: inset -1px 0 0 0 rgba(16, 22, 26, 0.15)
  thead tr:not(:first-child)
    th:nth-child(2),
    th:nth-child(5),
    th:nth-child(9)
      box-shadow: inset -1px 0 0 0 rgba(16, 22, 26, 0.15)
  tbody tr:not(:first-child)
    td:nth-child(2),
    td:nth-child(5),
    td:nth-child(9)
      box-shadow: inset -1px 0 0 0 rgba(16, 22, 26, 0.15)

.bp4-button.invisible
  visibility hidden

.bp4-tag.bp4-minimal.invisible
  &,
  &:hover,
  &:active,
  &:focus
    background-color transparent
    padding-left 0
    padding-right 0
    border none
    outline none

.boring
  color #ccc

.page
  margin 20px auto
  width fit-content


